read -p "Enter a Player In IPL " player

case $player in

   Dhoni)

      echo "He is Captain Of CSK"

      ;    ;

   Virat)

      echo "He is Captain Of RCB"

      ;;

   Rohit)

      echo "He is Captain Of MI"

      ;;

  Rahul)

      echo "He is Captain Of KXIP"

      ;;

   *)

     echo "Invalid Input :( "

     ;;

esac